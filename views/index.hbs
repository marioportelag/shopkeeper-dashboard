<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ShopKeeper Dashboard</title>

  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.5/css/jquery.dataTables.min.css">

  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    table, th, td {
      border: 1px solid black;
    }
    th, td {
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    tbody tr:nth-child(even) {
      background-color: #f9f9f9;
    }
  </style>
</head>
<body>

<h1>ShopKeeper Dashboard</h1>

<!-- GrÃ¡fico -->
<canvas id="listingChart" width="400" height="200"></canvas>

<!-- Tabla -->
<table id="brokerTable" class="display">
  <thead>
    <tr>
      <th>Listing Id</th>
      <th>Broker</th>
      <th>Month</th>
      <th>Total Listings</th>
      <th>Average Revenue</th>
    </tr>
  </thead>
  <tbody>
    {{#each listings}}
    <tr>
      <td>{{listing_id}}</td>
      <td>{{broker}}</td>
      <td>{{listing_month}}</td>
      <td>{{total_listings}}</td>
      <td>{{avg_revenue}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const labels = {{{json months}}};
  const data = {{{json datasets}}};

  console.log(labels);
  console.log(data);

  const ctx = document.getElementById('listingChart').getContext('2d');
  const listingChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: labels,
        datasets: data
    },
    options: {
        scales: {
        y: {
            beginAtZero: true,
            title: {
            display: true,
            text: 'Total Listings'
            }
        },
        x: {
            title: {
            display: true,
            text: 'Months'
            }
        }
        }
    }
  });

  $(document).ready(function() {
    $('#brokerTable').DataTable({
      paging: true,        
      searching: true,    
      ordering: true,     
      info: true,         
      lengthMenu: [5, 10, 25, 50, 100],
      order: [[1, 'asc']],  
      language: {
        search: "Search:",
        lengthMenu: "Show _MENU_ records by page",
        info: "Showing page _PAGE_ of _PAGES_",
        infoEmpty: "Records not available",
        infoFiltered: "(Filtering _MAX_ of the total)",
        paginate: {
          previous: "Previous",
          next: "Next"
        }
      }
    });
  });
</script>

</body>
</html>
